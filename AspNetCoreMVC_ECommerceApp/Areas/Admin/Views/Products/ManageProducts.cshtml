@model ManageProductsViewModel
@{
    ViewData["Title"] = "Manage Products";
}
@section Styles{
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
<a asp-area="Admin" asp-action="AddProduct" asp-controller="Products" class="btn btn-success mb-3">Add Prodcut</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category Name</th>
                        <th>Details</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Category Name</th>
                        <th>Details</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr >
                            <td>@product.Name</td>
                            <td>@product.Category.Name</td>
                            <td>@product.Details</td>
                            <td>@product.Price</td>
                            <td>
                                <a class="btn btn-info text-light">Details</a>
                                <a asp-action="EditProduct" asp-controller="Products" asp-route-id="@product.Id" class="btn btn-warning text-light">Edit</a>
                                <a id="rowDataDeleteBtn" class="btn btn-danger text-light" data-toggle="modal" data-target="#exampleModal" data-id="@product.Id">Delete</a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
<!--Delete Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="exampleModalLabel">Warning</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure to delete ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="modalDeleteBtn" type="button" class="btn btn-danger" data-id="0">Delete</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
    <script src="~/js/manageProducts.js"></script>
}
